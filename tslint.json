{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended", "tslint:latest", "tslint-config-prettier"
  ],
  "jsRules": {},
  "rules": {
    "no-console": false,
    "member-access": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "interface-name": false,
    "no-submodule-imports": false,
    "max-line-length": [
      true, 120
    ],
    "no-trailing-whitespace": [
      true, "always"
    ],
    "prefer-const": [
      true, {
        "destructuring": "any"
      }
    ],
    "semicolon": [
      true, "always"
    ],
    "space-before-function-paren": [
      true, "any"
    ],
    "quotemark": [true, "single"]
  }
}
